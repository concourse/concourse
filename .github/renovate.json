{
  "extends": ["config:base", "group:all"],
  "packageRules": [
    {
      "matchLanguages": ["js"],
      "addLabels": ["javascript"],
      "extends": ["schedule:monthly"],
      "groupName": "javascript",
      "groupSlug": "js"
    },
    {
      "matchLanguages": ["go"],
      "addLabels": ["golang"],
      "extends": ["schedule:weekly"],
      "groupName": "golang",
      "groupSlug": "go"
    },
    {
      "matchPackageNames": ["k8s.io/client-go"],
      "allowedVersions": "!/1\\.(4\\.0|5\\.0|5\\.1|5\\.2)$/"
    },
    {
      "matchPackageNames": ["go.yaml.in/yaml/v4"],
      "allowedVersions": "<5.0.0"
    },
    {
      "matchPackageNames": ["go.yaml.in/yaml/v2"],
      "allowedVersions": "<3.0.0"
    },
    {
      "matchPackageNames": ["/garden/"],
      "matchManagers": ["gomod"],
      "enabled": false
    }
  ],
  "ignoreDeps": ["elm", "client-go"],
  "labels": ["dependencies", "misc", "release/undocumented"]
}

    default: ""

  riemann.tags:
    description: |
      An optional map of tags in key: value format
    default: {}
    example:
      env: dev
      foo: bar

  prometheus.bind_ip:
    description: |
      If configured, expose Prometheus metrics at specified address

  prometheus.bind_port:
    description: |
      If configured, expose Prometheus metrics at specified port

  influxdb.url:
    description: |
